module main

import fil.types
import fil.io

class Person(val firstname: String, val lastname: String, var age: int)

fun operator<<(os: ostream, p: Person) (
    sout << "My name is " << p.firstname << " " << p.lastname << nl
    sout << "And I am " << p.age << "years old." << nl
)

fun main() {
    var john = Person("John", "Doe", 42)

    sout << john
}